# ==============================================
# INVEB Envases OT - Variables de Entorno
# ==============================================
# Copiar a .env y ajustar valores segun ambiente

# ========== Aplicacion ==========
APP_NAME=INVEB Envases OT API
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production

# ========== Base de Datos MySQL ==========
# Base de datos principal (compartida con Laravel)
LARAVEL_MYSQL_HOST=localhost
LARAVEL_MYSQL_PORT=3306
LARAVEL_MYSQL_DATABASE=envases_ot
LARAVEL_MYSQL_USER=root
LARAVEL_MYSQL_PASSWORD=your_password_here

# ========== Autenticacion JWT ==========
# IMPORTANTE: Cambiar por una clave segura en produccion
JWT_SECRET_KEY=change-this-to-a-secure-secret-key
JWT_EXPIRATION_HOURS=24

# ========== CORS ==========
# Separar multiples origenes con coma
CORS_ORIGINS=http://localhost:3000

# ========== API ==========
API_PREFIX=/api/v1
